/* pages/detail/detail.wxss */
.detailBanner .screen-swiper{
  height:430rpx;
}
.detailTitleInfo{
  padding:0 30rpx;
  background:#fff;
  margin-bottom:20rpx;
}
.detailTitleInfo{
  padding-top:10rpx;
}
.mainTitle{
  position:relative;
  line-height:80rpx;
  height:80rpx;
}
.mainTitle>text{
   display:block;
   font-size:36rpx;
   color:#353535;
   font-weight:bold;
}
.mainTitle .shareIcon{
  position:absolute;
  right:0;
  top:50%;
  font-weight:bold;
  color:#d81e06;
  margin-top:-10px;
}
.subTitle{
  font-size:22rpx;
  color:#999999;
  line-height:46rpx;
}
.priceBox>view{
  font-size:36rpx;
  color:#de2e2e;
  font-weight:bold;
}
.priceBox>view text{
  font-size:26rpx;
  color:#999999;
  text-decoration:line-through;
}
.tipBox>text{
  background:#df463c;
  font-size:26rpx;
  color:#fff;
  padding:5rpx 10rpx;
  margin-top:10rpx;
  display:inline-block;
}
.otherInfo{
   height:90rpx;
   padding-bottom:30rpx;
   padding-top:10rpx;
}
.otherInfo>view{
  color:#999999;
  font-size:26rpx;
}
.discountsMain{
  background:#fff;
  margin-bottom:20rpx;
}
.discountsItem{
  height:95rpx;
  line-height:95rpx;
  padding:0 30rpx;
  position:relative;
}
.discountsItem>text{
  font-size:26rpx;
}
.discountsItem>text:first-of-type{
  color:#333333;
  padding-right:24rpx;
  font-weight:bold;
}
.discountsItem>text:nth-of-type(2){
  color:#999999;
}
.discountsItem .moreIcon{
  position:absolute;
  right:30rpx;
  top:30rpx;
}
.addressMain{
  background:#fff;
  padding-bottom:20rpx;
  margin-bottom:20rpx;
}
.addressMain .top{
  padding:0 30rpx;
  height:95rpx;
  line-height:95rpx;
  position:relative;
}
.addressMain .top text{
  font-size:26rpx;
}
.addressMain .top text:first-of-type{
  font-weight:bold;
  color:#333333;
  padding-right:24rpx;
}
.addressMain .top .moreIcon{
  position:absolute;
  right:30rpx;
  top:30rpx;
}
.addressMain .sub{
   padding-left:104rpx;
   position:relative;
   top:-20rpx;
}
.addressMain .sub text{
  font-size:26rpx;
}
.addressMain .sub text:first-of-type{
  font-weight:bold;
  color:#d81e06;
}
.addressMain .sub text:nth-of-type(2){
  color:#999999;
}
.evaluateMain{
  background:#fff;
  margin-bottom:20rpx;
}
.evaluateHeader{
  padding:34rpx 30rpx 0;
}
.evaluateHeader .left {
  height:40rpx;
}
.evaluateHeader .left image{
  width:6rpx;
  height:33rpx; 
  margin-right:14rpx;
  position:relative;
  top:5rpx;
}
.evaluateHeader .left text:nth-of-type(1){
  font-size:26rpx;
  font-weight:bold;
}
.evaluateHeader .left text:nth-of-type(2){
  font-size:20rpx;
  color:#333333;
  position:relative;
  left:10rpx;
  top:6rpx;
}
.evaluateHeader .right text{
   font-size:20rpx;
   color:#999999;
   margin-right:16rpx;
}
.evaluateTip{
  padding:30rpx 45rpx;
}
.evaluateTip>text{
   padding:10rpx 20rpx;
   background:#fff1ee;
   color:#333333;
   font-size:20rpx;
   margin-right:30rpx;
}
.evaluateBody{
  padding:0 60rpx;
}
.evaluateItemTop image{
  width:40rpx;
  display:block;
  margin-right:20rpx;
}
.evaluateItemTop view text{
 display:block;
 font-weight:bold;
 font-size:20rpx;
}
.evaluateItemSub{
  padding:20rpx 0 40rpx;
  font-size:22rpx;
  color:#333;
  line-height:34rpx;
  text-align:justify;
}
.viewMore{
  height:100rpx;
  line-height:100rpx;
  text-align:center;
  font-size:24rpx;
  color:#333;
}
.detailContent{
  background:#fff;
  margin-bottom:20rpx;
  padding-bottom:50px;
}
.detailContent .title{
  height:120rpx;
  line-height:120rpx;
  text-align:center;
}
.detailContent .title text{
  position:relative;
  font-size:32rpx;
  font-weight:bold;
  color:#333;
}
.detailContent .title text::before{
  content:"";
  display:block;
  width:40rpx;
  height:4rpx;
  background:#333;
  position:absolute;
  left:-60rpx;
  top:50%;
  margin-top:-2rpx;
}
.detailContent .title text::after{
  content:"";
  display:block;
  width:40rpx;
  height:4rpx;
  background:#333;
  position:absolute;
  right:-60rpx;
  top:50%;
  margin-top:-2rpx;
}
.content{
  padding:30rpx;
  font-size:28rpx;
  color:#333;
  line-height:40rpx;
}
.vant-goods-button button{
  float:right;
}
    <image src="../../assets/images/bannerImg.jpg" mode="widthFix"></image>
  </view>
  <!-- 菜单 -->
  <view class="indexMenuMain">
    <view class="indexMenuBox">
      <view class="left">
        <image src="../../assets/images/indexBtnBg01.png" mode="widthFix"></image>
        <view class="title flex align-center">
          <van-icon class="vanIcon" name="records" />我要制作</view>
      </view>
      <view class="right">
        <view class="rightTop">
          <image src="../../assets/images/indexBtnBg02.png" mode="widthFix"></image>
          <view class="title flex align-center">
            <van-icon class="vanIcon" name="brush-o" style="position:relative;top:6rpx;" />设计部</view>
        </view>
        <view class="rightSub">
          <image src="../../assets/images/indexBtnBg03.png" mode="widthFix"></image>
          <view class="title flex align-center">
            <van-icon class="vanIcon" name="service-o" style="position:relative;top:4rpx;" />客服部</view>
        </view>
      </view>
    </view>
  </view>
  <!-- 为您推荐 -->
  <view class="indexRecommendMain">
    <view class="indexRecommendBox">
      <view class="title flex align-center">
        <van-icon name="gift" class="iconGift" />为您推荐</view>
      <view class="indexRecommendImg">
        <swiper class="card-swiper {{DotStyle?'square-dot':'round-dot'}}" indicator-dots="true" circular="true" autoplay="true" interval="5000" duration="500" bindchange="cardSwiper" indicator-color="#8799a3" indicator-active-color="#0081ff">
          <swiper-item wx:for="{{swiperList}}" wx:key="item.id" class="{{cardCur==index?'cur':''}}">
            <view class="swiper-item">
              <image src="{{item.url}}" mode="aspectFill"></image>
            </view>
          </swiper-item>
        </swiper>
      </view>
    </view>
  </view>

</view>
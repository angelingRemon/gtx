/* pages/wallet/wallet.wxss */
page{
    background:#fff;
}
.myWalletItem{
    position: relative;
}
.myWalletItem .topBg{
    width:100%;
    background:#f1f1f1;
    height:70rpx;
    position: absolute;
    left:0;
    top:0;
}
.number{
   padding:30rpx;
   position:relative;
}
.number image{
    width:100%;
}
.number text{
    display:block;
    position:absolute;
    color:#fff;
    z-index:9;
}
.number text:nth-of-type(1){
   font-size:32rpx;
   line-height:34rpx;
   left:80rpx;
   top:88rpx;
}
.number text:nth-of-type(2){
    font-size:70rpx;
    line-height:80rpx;
    left:80rpx;
    top:140rpx;
    font-weight:bold;
 }

/* pages/ordersDetail/ordersDetail.wxss */
.headerBg {
    height: 125rpx;
    background: #e23308;
    width: 100%;
    position: fixed;
    left: 0;
    top: 0;
}

.ordersDetailBox {
    padding: 30rpx 30rpx 120rpx;
}

.progressMain {
    background: #fff;
    position: relative;
    z-index: 999;
    padding: 20rpx 0 30rpx;
}

.progressMain .cu-item {
    font-size: 24rpx;
}

.progressMain .cu-item.text-blue {
    color: #e23308;
}

.addressMain {
    background: #fff;
    padding: 30rpx;
    position: relative;
    margin-bottom:20rpx;
}
.addressMain>view:first-of-type{
    padding-left:44rpx;
}
.addressText {
    overflow: hidden;
    padding-top: 10rpx;
}

.addressText>text {
    display: block;
    float: left;
    font-size: 36rpx;
    color: #e23308;
    position: relative;
    top: -7rpx;
    left:-5rpx;
}

.addressText>view {
    padding-left: 45rpx;
    line-height: 40rpx;
    text-align: justify;
}


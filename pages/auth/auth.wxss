/* pages/auth/auth.wxss */
page{
  background:#fff;
}
.identityAuthenticationMain{
  padding:50rpx;
}
.title{
  padding-bottom:40rpx;
}
.title view.name{
  font-size:40rpx;
  color:#333;
  font-weight:bold;
  padding-top:30rpx;
}
.title view.tip{
  padding:20rpx 0 30rpx;
  font-size:28rpx;
  line-height:46rpx;
  text-align:justify;
}
.title view.tip text{
  color:#f33;
  font-weight:bold;
}
.inputItem>text{
  font-size:32rpx;
  line-height:50rpx;
  display:block;
  padding-top:30rpx;
  font-weight:bold;
}
.inputItem view{
  height:120rpx;
  line-height:120rpx;
  position:relative;
}
.inputItem view.bottomArr::after{
  content:"";
  display:block;
  width:16rpx;
  height:16rpx;
  border-right:6rpx solid #ccc;
  border-bottom:6rpx solid #ccc;
  transform:rotate(45deg);
  position:absolute;
  right:10rpx;
  top:50%;
  margin-top:-8rpx;
  
}
.inputItem view input{
  height:120rpx;
}
.inputItem view text{
  position:absolute;
  right:0;
  top:50%;
  margin-top:-30rpx;
  line-height:60rpx;
  color:#e23308;
}
.inputItem view text.active{
  color:#ccc;
}
.btn{
  margin-top:80rpx;
  width:100% !important;
  font-size:28rpx;
  color:#fff;
  background:#e23308;
  border-radius:80rpx;
}
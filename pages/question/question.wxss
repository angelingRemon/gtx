/* pages/question/question.wxss */
.serviceTimeMain{
  padding:30rpx;
  background:#e23308;
  position:relative;
  overflow:hidden;
}
.serviceTimeMain>image{
  width:250rpx;
  height:250rpx;
  position:absolute;
  right:0;
  top:-10rpx;
  opacity:0.3;
}
.serviceTimeMain>text{
  font-size:50rpx;
  color:#fff;
  line-height:50rpx;
  padding-bottom:30rpx;
  display:block;
  font-weight:400;
}
.serviceTimeMain>view text{
  color:#fff;
  padding-bottom:20rpx;
  font-size:32rpx;
  display:block;
}
.serviceQuestionMain{
  padding:40rpx 30rpx 30rpx;
}
.serviceQuestionMain text.title{
  border-left:8rpx solid #e23308;
  font-size:32rpx;
  line-height:32rpx;
  padding-left:16rpx;
  display:block;
}
.serviceQuestionBox{
  padding-top:20rpx;
}
.serviceQuestionItem{
  line-height:40rpx;
  padding:30rpx 0;
  border-bottom:1rpx solid #e8e8e8;
}
.serviceQuestionItem>text{
  font-size:28rpx;
  position:relative;
  display:block;
  padding-left:30rpx;
}
.serviceQuestionItem>text::before{
  content:"";
  display:block;
  width:10rpx;
  height:10rpx;
  background:#e23308;
  border-radius:50%;
  position:absolute;
  left:0;
  top:50%;
  margin-top:-4rpx;
}
.serviceQuestionItem>view{
  margin:10rpx 0 0;
  padding:15rpx 30rpx 0 30rpx;
}
.serviceQuestionItem>view view{
  font-size:28rpx;
  background:#e8e8e8;
  display:block;
  padding:15rpx;
  line-height:44rpx;
  border-radius:10rpx;
  text-align:justify;
}
.serviceQuestionItem>view view text{
  display:block;
}
.serviceQuestionItem>view view text.left{
  float:left;
}
.serviceQuestionItem>view view text.right{
  padding-left:56rpx;
}
.serviceQuestionItem>text::after{
  content:"";
  display:block;
  width:10rpx;
  height:10rpx;
  border-right:2px solid #ccc;
  border-bottom:2px solid #ccc;
  position:absolute;
  right:30rpx;
  top:50%;
  margin-top:-10rpx;
  transform: rotate(45deg);
}
.button_left{
  width: 100rpx;
  height: 80rpx;
  line-height: 80rpx;
}

page,.main{
    height: 100%;
    background:#fff;
}
.categroy-left{
    float: left;
    width: 150rpx;
    height: 100%;
    border-right: 1px solid #ddd;
    box-sizing: border-box;
}
.categroy-left .cate-list{
    height: 90rpx;
    line-height: 92rpx;
    text-align: center;
    border-left: 3px solid #fff;
    font-size:28rpx;
    position:relative;
    overflow:hidden;
}
.categroy-left .cate-list.on{
  color:#e23308;
}
.categroy-left .cate-list.on::before{
    content:"";
    display:block;
    width:10rpx;
    height:40rpx;
    position:absolute;
    top:50%;
    margin-top:-20rpx;
    left:0;
    background:#e23308;
}
.categroy-right{
    float: right;
    width: 600rpx;
    height: 100%;
    overflow: hidden;
    
}
.cate-box{
    height: 100%;
    padding:20rpx;
    box-sizing: border-box;
}
.cate-box .cate-banner image{
    display: block;
    width: 100%;
    height: 157rpx;
}
.cate-title{
    position: relative;
    height: 30rpx;
    line-height: 30rpx;
    padding:30rpx 0 55rpx;
    text-align: center;
    color: #2b95ff;
    font-size: 28rpx;
}
.cate-title::before{
    position: absolute;
    left: 130rpx;
    top: 43rpx;
    content: '';
    width: 70rpx;
    height: 4rpx;
    background: #2b95ff;
}
.cate-title::after{
    position: absolute;
    right: 130rpx;
    top: 43rpx;
    content: '';
    width: 70rpx;
    height: 4rpx;
    background: #2b95ff;
}

.product-list{
    display: inline-block;
    width: 160rpx;
    height: 160rpx;
    text-align: center;
    margin:0 40rpx 20rpx 0;
    font-size: 24rpx;
}
.product-list image{
    width: 160rpx;
    height: 80rpx;
    margin-bottom: 20rpx;
}
.product-list:nth-child(3n){
    margin-right: 0;
}

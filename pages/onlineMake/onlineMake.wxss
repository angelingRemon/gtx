page,.main{
    height:100%;
    background:#fff;
}
.main{
    height:calc(100% - 54px);
}
.categroy-left{
    float: left;
    width: 150rpx;
    height: 100%;
    box-sizing: border-box;
}
.categroy-left .cate-list{
    height: 90rpx;
    line-height: 92rpx;
    text-align: center;
    border-left: 3px solid #fff;
    font-size:28rpx;
    position:relative;
    overflow:hidden;
}
.categroy-left .cate-list.on{
  color:#e23308;
}
.categroy-left .cate-list.on::before{
    content:"";
    display:block;
    width:10rpx;
    height:40rpx;
    position:absolute;
    top:50%;
    margin-top:-20rpx;
    left:0;
    background:#e23308;
}
.categroy-right{
    float: right;
    width: 600rpx;
    height: 100%;
    overflow: hidden;
    
}
.cate-box{
    height: 100%;
    padding:20rpx;
    box-sizing: border-box;
    overflow-x:hidden;
}
.cate-box .cate-banner image{
    display: block;
    width: 100%;
    height: 157rpx;
}
.cate-title{
    position: relative;
    height: 30rpx;
    line-height: 30rpx;
    padding:30rpx 0 55rpx 20rpx;
    text-align:left;
    color: #313131;
    font-size: 28rpx;
    font-weight:bold;
}
.cate-title::before{
    content:"";
    display:block;
    width:6rpx;
    height:30rpx;
    background:#e23308;
    position:absolute;
    left:0;
    top:50%;
    margin-top:-15rpx;
}

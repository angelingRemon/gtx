.product-list{
    display: inline-block;
    width: 160rpx;
    height: 160rpx;
    text-align: center;
    margin:0 40rpx 0 0;
    font-size: 24rpx;
}
.product-list image{
    width: 100rpx;
    height: 100rpx;
    display:block;
    margin:0 auto;
}
.product-list .classname{
  font-weight:bold;
  color:#5e5e5e;
}
.product-list:nth-child(3n){
    margin-right: 0;
}
.productTitle{
    overflow:hidden;
}
.productTitle>view{
    width:32%;
    margin-right:2%;
    float:left;
    text-align:center;
    height:56rpx;
    background:#e5e5e5;
    line-height:56rpx;
    color:#5e5e5e;
    font-size:24rpx;
    margin-bottom:10rpx;
}
.productTitle>view:nth-of-type(3n){
    margin-right:0;
}
